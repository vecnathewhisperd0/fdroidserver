#!/bin/bash

cat > /etc/rc.local  << EOF
#!/bin/bash

if [ -x /opt/firstrun.sh ] ; then
	/opt/firstrun.sh &> /var/log/firstrun.log || true
	rm -f /opt/firstrun.sh
fi
EOF

chmod 0755 /etc/rc.local

cat > /opt/firstrun.sh << EOF
#!/bin/bash

mkdir -p /home/vagrant/.ssh
# Well known vagrant key
echo ssh-rsa  > /home/vagrant/.ssh/authorized_keys

chown -R vagrant:vagrant /home/vagrant/.ssh
chmod 0600 /home/vagrant/.ssh/authorized_keys

dpkg-reconfigure openssh-server
systemctl restart ssh

EOF

chmod 0755 /opt/firstrun.sh
